{
    "env": {
        "browser": true,
        "es6": true,
        "amd": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "one-var": [
            "error",
            "never"
        ],
        "prefer-destructuring": "off"
    },
    "globals": {
      "module": false,
      "process": false
    }
}
